%nav.navbar.navbar-default{role: 'navigation'}
  .container
    .navbar-header
      %button.navbar-toggle{type: 'button',
                            data: {toggle: 'collapse',
                                   target: '.header-navbar-collapse'}}
        %span.icon-bar
      = link_to 'hogelog blog! blog!', root_path, class: 'navbar-brand'
    .collapse.navbar-collapse.header-navbar-collapse
      %ul.nav.navbar-nav
        %li= link_to "Archive", articles_path
        - if @login_user
          %li= link_to 'New Article', new_article_path
          %li= link_to 'Logout', logout_path
        - else
          %li= link_to 'Login', login_path
