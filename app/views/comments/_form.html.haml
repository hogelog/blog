= form_for [article, article.comments.build],
           html: {class: 'form-inline', role: 'form'} do |f|
  .form-group
    = f.label :body, class: 'sr-only', for: 'input-comment'
    = f.text_area :text,
                  class: 'form-control',
                  id: 'input-comment',
                  placeholder: 'Comment',
                  rows: 1
  = f.submit 'Post', class: 'btn btn-default'
